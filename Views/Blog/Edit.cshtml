@model MyBlogApplication.Models.Blog

@{
    ViewData["Title"] = "Edit";
}

<h4>Update Article</h4>
<hr />

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}

<div class="row g-5">
    <div class="col-md-8">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="d-flex justify-content-between">
                <h5>Get your keyboard and fingers ready!</h5>

                <!--ACTIONS-->
                <div class="d-flex align-items-center gap-2">
                    @if (ViewBag.ShowButton == true)
                    {
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-success btn-sm" />
                        </div>
                    }
                    else
                    {
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-success disabled btn-sm" />
                        </div>
                    }
                </div>
            </div>

            <hr />

            <input type="hidden" asp-for="BlogId" />

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label mb-2"></label>
                <input asp-for="Title" class="form-control" placeholder="Article title" />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>
            <div class="row mb-3">
                <div class="col-6">
                    <div class="form-group">
                        <input type="hidden" asp-for="ImageUrl" />

                        <label asp-for="ImageUrl" class="control-label mb-2"></label>
                        <input type="file" name="ImageFile" class="form-control" />
                        <span class="text-muted small">Uploading an image overrides the current one.</span>
                        <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Author" class="control-label mb-2"></label>
                        <input asp-for="Author" class="form-control" placeholder="Article author or your name" />
                        <span asp-validation-for="Author" class="text-danger small"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Content" class="control-label mb-2"></label>
                <input type="hidden" asp-for="Content" id="Content" />
                <div id="quillEditor" style="height: 250px; background: #fff;"
                     class="shadow-sm rounded-3"></div>
                <span asp-validation-for="Content" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Category" class="control-label mb-2"></label>
                <input asp-for="Category" class="form-control" placeholder="e.g. Innovation" />
                <span class="text-muted small">One-word catergories are recommended.</span>
                <span asp-validation-for="Category" class="text-danger small"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Summary" class="control-label mb-2"></label>
                <textarea asp-for="Summary" rows="4" class="form-control" placeholder="Article summary goes here..."></textarea>
                <span class="text-muted small">Summaries are often used as abouts for articles.</span>
                <span asp-validation-for="Summary" class="text-danger small"></span>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="card border alert alert-warning">
            <div class="card-body">
                <h5>Content Editing Tips</h5>
                <p>It is not advisible to update titles and author names!, keep content structured, and preview your formatting before publishing. Microsoft Developer use clean, accessible writting.</p>

                <h5>Recommendations</h5>
                <ul>
                    <li>Uploading an image overrides the current one.</li>
                    <li>Summary should be under 200 chars</li>
                    <li>Use descriptive headers in content</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />
<script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>

<script>
    var quill = new Quill('#quillEditor', {
        theme: 'snow',
        placeholder: 'Write your blog content here...',
        modules: {
            toolbar: [
                [{ header: [1, 2, 3, false] }],
                ['bold', 'italic', 'underline'],
                [{ list: 'ordered' }, { list: 'bullet' }],
                ['link', 'blockquote', 'code-block'],
                ['clean']
            ]
        }
    });

    // Sync content to hidden input before form submit
    var form = document.querySelector("form");
    form.onsubmit = function () {
        document.getElementById("Content").value = quill.root.innerHTML;
    };

    // If editing existing content, load it
    var existing = "@Html.Raw(Model.Content ?? "")";
    if (existing.length > 0) {
        quill.root.innerHTML = existing;
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
