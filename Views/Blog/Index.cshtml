@using MyBlogApplication.Infrastructure
@model PaginatedList<MyBlogApplication.Models.Blog>

@{
    ViewData["Title"] = "Index";
}

<h4 class="fw-bold mb-3">Latest Posts</h4>
<hr class="mb-4" />


<div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
    <form asp-action="Index" method="get" class="d-flex align-items-center">
        <label class="me-2">Search by Title:</label>
        <input type="text" name="SearchInput" value="@ViewData["CurrentSearch"]" class="form-control form-control-sm" style="width: 200px;"
                />
        <button type="submit" class="btn btn-default">Search</button>
        <a asp-action="Index" class="btn btn-outline-primary btn-sm">Back to full list</a>
    </form>
    <div class="dropdown mt-3 mt-md-0">
        <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
            Sort by
        </button>

        <ul class="dropdown-menu dropdown-menu-start">
            <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="@ViewData["CategorySortParam"]">Category</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParam"]">Title</a></li>
            <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParam"]">Date</a></li>
        </ul>
    </div>

</div>


@if(Model.Count > 0)
{
<div class="container px-0">
    <div class="row">
        <div class="col-8">
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-md-6">
                        <a asp-action="DetailsDefault" asp-route-id="@item.BlogId" class="text-decoration-none">
                            <div class="card h-100 border-1 rounded-4 article-card">
                                <div class="card-body">
                                    <div class="position-relative">
                                        <img src="@item.ImageUrl" loading="lazy" class="card-img-top rounded-3" style="height: 200px; object-fit: cover;" />
                                    </div>

                                    <div class="my-3">
                                        <div class="d-flex justify-content-between">
                                            <p class="text-muted small mb-1">@item.CreatedAt.ToString("MMM d, yyyy")</p>
                                            <span class="small text-muted"><i class="bi bi-chat-left"></i> @item.Comments.Count</span>
                                        </div>
                                        <h5 class="fw-bold text-dark">@item.Title</h5>
                                        <p class="text-muted small mb-1">@item.Author</p>

                                        <p class="small mb-2">
                                            <span class="badge bg-primary">@item.Category</span>
                                        </p>

                                        <p class="text-secondary small">@item.Summary</p>
                                    </div>

                                    <div class="card-footer bg-white border-0 py-2">
                                        <div class="d-flex gap-3">
                                            <a asp-action="DetailsDefault" asp-route-id="@item.BlogId" class="text-decoration-none fw-bold">Read More</a>
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <a asp-action="Edit" asp-route-id="@item.BlogId">Edit</a>
                                                    <a asp-action="Delete" asp-route-id="@item.BlogId">Delete</a>
                                                }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   class="btn btn-outline-primary btn-sm @prevDisabled">Previous</a>

                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   class="btn btn-outline-primary btn-sm @nextDisabled">Next</a>
            </div>

        </div>
        <div class="col-4">

        </div>
    </div>
    </div>
} else
{
    <div class="d-flex justify-content-center align-items-center flex-column" style="height: 300px;">
        <i class="bi bi-database display-6 mb-3"></i>
        <em>No records found in database</em>
    </div>
}

<style>
    .article-card {
        box-shadow: 0 5px 7px rgba(0,0,0,0.1);
        transition: .3s ease;
    }
    .article-card:hover {
        box-shadow: 0 5px 7px rgba(0,0,0,0.3);
    }
</style>