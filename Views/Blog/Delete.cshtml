@model MyBlogApplication.Models.Blog

@{
    ViewData["Title"] = "Delete";
}

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}
<div>
    <div class="mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">

                <div class="alert alert-danger d-flex align-items-center mb-4 shadow-sm">
                    <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
                    <div>
                        <h5 class="mb-1 fw-semibold">Are you sure you want to continue?</h5>
                        <p class="mb-0 small">
                            This action is permanent and cannot be undone.
                        </p>
                    </div>
                </div>

                <!-- Blog content card -->
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">

                        <h4 class="fw-semibold mb-4">@Model.Title</h4>

                        <dl class="row mb-0">
                            <dt class="col-sm-3 text-muted small">Author</dt>
                            <dd class="col-sm-9">@Model.Author</dd>

                            <dt class="col-sm-3 text-muted small">Category</dt>
                            <dd class="col-sm-9">@Model.Category</dd>

                            <dt class="col-sm-3 text-muted small">Summary</dt>
                            <dd class="col-sm-9">@Model.Summary</dd>

                            <dt class="col-sm-3 text-muted small">Content</dt>
                            <dd class="col-sm-9">
                                <div class="border rounded bg-light p-3" style="white-space: pre-line;">
                                    @Html.Raw(Model.Content)
                                </div>
                            </dd>
                        </dl>

                    </div>
                </div>

                <!-- Action buttons -->
                <div class="d-flex justify-content-end align-items-center mt-4">
                    @if (ViewBag.ShowButton == true)
                    {
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="BlogId" />
                            <button type="submit" class="btn btn-danger px-4">
                                Delete
                            </button>
                        </form>
                    }
                    else
                    {
                        <button class="btn btn-danger px-4" disabled>
                            Delete
                        </button>
                    }
                </div>

            </div>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
