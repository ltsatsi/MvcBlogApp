@model MyBlogApplication.ViewModel.UserViewModel

@{
    ViewData["Title"] = "Account Details";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="mb-4">
        <h3 class="fw-semibold mb-1">@ViewData["Title"]</h3>
        <p class="text-muted mb-0">User account information</p>
    </div>

    <!-- Profile Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">

            <div class="row mb-3">
                <div class="col-md-4 text-muted small">First name</div>
                <div class="col-md-8 fw-medium">@Model.FirstName</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4 text-muted small">Last name</div>
                <div class="col-md-8 fw-medium">
                    @(string.IsNullOrWhiteSpace(Model.LastName) ? "—" : Model.LastName)
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4 text-muted small">Role</div>
                <div class="col-md-8">
                    <span class="badge bg-secondary">
                        @(Model.RoleName ?? "None")
                    </span>
                </div>
            </div>

            <div class="row mb-0">
                <div class="col-md-4 text-muted small">Email address</div>
                <div class="col-md-8 fw-medium">
                    <a class="text-decoration-none" href="mailto:@Model.Email">
                        @Model.Email
                    </a>
                </div>
            </div>

        </div>
    </div>

    <!-- Footer Actions -->
    <div class="mt-4">
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary btn-sm">
            ← Back to Home
        </a>
        <a asp-action="Edit" asp-route-id="@Model.UserId" asp-controller="Account" class="btn btn-outline-primary btn-sm">
           Update
        </a>
    </div>
</div>
